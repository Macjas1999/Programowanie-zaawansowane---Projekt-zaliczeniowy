@model IEnumerable<Projekt_zaliczeniowy.Models.Payment>

<h2>Payment History</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Date</th>
            <th>Lesson</th>
            <th>Amount</th>
            <th>Method</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var payment in Model)
        {
            <tr>
                <td>@payment.PaymentDate.ToShortDateString()</td>
                <td>@payment.Lesson.Name</td>
                <td>@payment.Amount.ToString("C")</td>
                <td>@payment.PaymentMethod</td>
                <td>
                    <span class="badge @(payment.Status == "Completed" ? "bg-success" : "bg-warning")">
                        @payment.Status
                    </span>
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@payment.Id" class="btn btn-sm btn-info">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Back to Home</a>
</div>