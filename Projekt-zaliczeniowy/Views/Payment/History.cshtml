@model IEnumerable<Projekt_zaliczeniowy.Models.Payment>
@using Projekt_zaliczeniowy.Models

<h2>Historia płatności</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Data</th>
            <th>Lekcja</th>
            <th>Kwota</th>
            <th>Metoda płatności</th>
            <th>Status</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var payment in Model)
        {
            <tr>
                <td>@payment.PaymentDate.ToShortDateString()</td>
                <td>@payment.Lesson.Name</td>
                <td>@payment.Amount.ToString("C")</td>
                <td>@payment.Method.ToString()</td>
                <td>
                    <span class="badge @(payment.Status == PaymentStatus.Completed ? "bg-success" : "bg-warning")">
                        @payment.Status
                    </span>
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@payment.Id" class="btn btn-sm btn-info">Szczegóły</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Powrót</a>
</div>