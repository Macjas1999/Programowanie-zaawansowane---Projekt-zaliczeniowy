@model Projekt_zaliczeniowy.Models.Payment
@using Projekt_zaliczeniowy.Models

<h2>Przetwarzanie płatności</h2>

<form asp-action="Process" method="post">
    <div class="form-group">
        <label>Szczegóły lekcji</label>
        <div class="form-control-static">
            <p>Data: @Model.Lesson.StartTime.ToShortDateString()</p>
            <p>Godzina: @Model.Lesson.StartTime.ToShortTimeString() - @Model.Lesson.EndTime.ToShortTimeString()</p>
            <p>Korepetytor: @Model.Lesson.Teacher.UserName</p>
            <p>Uczeń: @Model.Lesson.Student.UserName</p>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Amount" class="control-label">Kwota</label>
        <input asp-for="Amount" class="form-control" value="@Model.Lesson.Price" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Method" class="control-label">Metoda płatności</label>
        <select asp-for="Method" class="form-control" required>
            <option value="@PaymentMethod.CreditCard">Karta kredytowa</option>
            <option value="@PaymentMethod.BankTransfer">Przelew bankowy</option>
            <option value="@PaymentMethod.Cash">Gotówka</option>
        </select>
    </div>

    <input type="hidden" asp-for="Lesson.Id" />

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Zapłać</button>
        <a asp-controller="Lesson" asp-action="Details" asp-route-id="@Model.Lesson.Id" class="btn btn-secondary">Powrót</a>
    </div>
</form>