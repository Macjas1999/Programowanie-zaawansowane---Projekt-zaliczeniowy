@model Projekt_zaliczeniowy.Models.Payment

<h2>Process Payment</h2>

<form asp-action="Process" method="post">
    <div class="form-group">
        <label>Lesson Details</label>
        <div class="form-control-static">
            <p>Date: @Model.Lesson.StartTime.ToShortDateString()</p>
            <p>Time: @Model.Lesson.StartTime.ToShortTimeString() - @Model.Lesson.EndTime.ToShortTimeString()</p>
            <p>Teacher: @Model.Lesson.Teacher.UserName</p>
            <p>Student: @Model.Lesson.Student.UserName</p>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Amount" class="control-label"></label>
        <input asp-for="Amount" class="form-control" value="@Model.Lesson.Price" readonly />
    </div>

    <div class="form-group">
        <label asp-for="PaymentMethod" class="control-label"></label>
        <select asp-for="PaymentMethod" class="form-control" required>
            <option value="CreditCard">Credit Card</option>
            <option value="BankTransfer">Bank Transfer</option>
            <option value="Cash">Cash</option>
        </select>
    </div>

    <input type="hidden" asp-for="Lesson.Id" />

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Process Payment</button>
        <a asp-controller="Lesson" asp-action="Details" asp-route-id="@Model.Lesson.Id" class="btn btn-secondary">Back</a>
    </div>
</form>