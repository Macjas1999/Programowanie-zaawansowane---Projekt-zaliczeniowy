@model Projekt_zaliczeniowy.Models.Lesson

<h2>Cancel Lesson</h2>

<div class="alert alert-warning">
    <h4>Are you sure you want to cancel this lesson?</h4>
</div>

<div>
    <dl class="row">
        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Name)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

        <dt class="col-sm-3">Start Time</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.StartTime)</dd>

        <dt class="col-sm-3">End Time</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.EndTime)</dd>
    </dl>

    <form asp-action="Cancel" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Notes" class="control-label">Cancellation Reason</label>
            <textarea asp-for="Notes" class="form-control" required></textarea>
        </div>
        <div class="mt-3">
            <input type="submit" value="Confirm Cancellation" class="btn btn-danger" />
            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Back to Details</a>
        </div>
    </form>
</div>