@model Projekt_zaliczeniowy.Models.Lesson

<h2>Lesson Details</h2>

<div>
    <dl class="row">
        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Name)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

        <dt class="col-sm-3">Teacher</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Teacher.UserName)</dd>

        <dt class="col-sm-3">Student</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Student.UserName)</dd>

        <dt class="col-sm-3">Start Time</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.StartTime)</dd>

        <dt class="col-sm-3">End Time</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.EndTime)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Price)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Price)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Status)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Status)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Notes)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Notes)</dd>
    </dl>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Cancel" asp-route-id="@Model.Id" class="btn btn-danger">Cancel Lesson</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>