@{
    ViewData["Title"] = "System Korepetycji Online";
}

<div class="container">
    @if (User.Identity.IsAuthenticated)
    {
        @if (User.IsInRole("Administrator"))
        {
            <div class="row">
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Zarządzanie użytkownikami</h5>
                            <p class="card-text">Zarządzaj kontami uczniów i nauczycieli.</p>
                            <a asp-controller="Admin" asp-action="Users" class="btn btn-primary">Przejdź</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Raporty</h5>
                            <p class="card-text">Przeglądaj raporty i statystyki.</p>
                            <a asp-controller="Admin" asp-action="Reports" class="btn btn-primary">Przejdź</a>
                        </div>
                    </div>
                </div>
            </div>
        }
        else if (User.IsInRole("Korepetytor"))
        {
            <div class="row">
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Panel główny</h5>
                            <p class="card-text">Przejdź do panelu głównego korepetytora.</p>
                            <a asp-controller="Teacher" asp-action="Index" class="btn btn-primary">Przejdź</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Kalendarz</h5>
                            <p class="card-text">Zarządzaj swoim harmonogramem zajęć.</p>
                            <a asp-controller="Teacher" asp-action="Calendar" class="btn btn-primary">Przejdź</a>
                        </div>
                    </div>
                </div>
            </div>
        }
        else if (User.IsInRole("Uzytkownik"))
        {
            <div class="row">
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Panel główny</h5>
                            <p class="card-text">Przejdź do panelu głównego ucznia.</p>
                            <a asp-controller="Student" asp-action="Index" class="btn btn-primary">Przejdź</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Kalendarz</h5>
                            <p class="card-text">Zobacz swój harmonogram zajęć.</p>
                            <a asp-controller="Student" asp-action="Calendar" class="btn btn-primary">Przejdź</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Płatności</h5>
                            <p class="card-text">Zarządzaj swoimi płatnościami.</p>
                            <a asp-controller="Student" asp-action="Payments" class="btn btn-primary">Przejdź</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="text-center">
            <h1 class="display-4">Witaj w systemie korepetycji online</h1>
            <p>Zaloguj się lub zarejestruj, aby rozpocząć.</p>
            <div class="mt-4">
                <a asp-controller="Account" asp-action="Login" class="btn btn-primary mx-2">Zaloguj się</a>
                <a asp-controller="Account" asp-action="Register" class="btn btn-success mx-2">Zarejestruj się</a>
            </div>
        </div>
    }
</div>
